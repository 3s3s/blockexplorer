	<div class="container" style="margin-top: 70px;">    
        <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-default" >
				<div class="panel-heading">
					<div class="panel-title">Login</div>
					<!--<div style="float:right; font-size: 80%; position: relative; top:-18px"><a href="#">Forgot password?</a></div>-->
				</div>     
				<div class="panel-body" >
					<form id="loginform" class="" role="form" method="post" action="/login">
						<div class="form-group {{#if formErros.varEmail}}has-error{{/if}}">
							<div class="input-group">
								<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
								<input id="login-username" type="email" class="form-control" name="varEmail" value="{{#if params.varEmail}}{{params.varEmail}}{{/if}}" placeholder="Email" required>
							</div>
							{{#if formErros.varEmail}}
							<span class="help-block">{{formErros.varEmail.msg}}</span>
							{{/if}}
						</div>
						<div class="form-group {{#if formErros.varPassword}}has-error{{/if}}">
							<div class="input-group">
								<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
								<input id="login-password" type="password" class="form-control" name="varPassword" placeholder="Password" required>
							</div>
							{{#if formErros.varPassword}}
							<span class="help-block">{{formErros.varPassword.msg}}</span>
							{{/if}}
						</div>
						<div class="form-group">
							<!-- Button -->
							<button type="submit" class="btn btn-success">Login</button>
						</div>
						<div class="form-group">
							<div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
									Don't have an account! 
								<a href="/register">
									Sign Up Here
								</a>
							</div>
						</div>    
						</form>
						{{#if login_errors}}<div id="login-alert" class="alert alert-danger col-sm-12">{{login_errors}}</div>{{/if}}
					</div>                     
				</div>  
			</div>
		</div>

